html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title TutorMatch - #{title}
        link(rel='stylesheet' href='/static/bootstrap/css/bootstrap.css')
        script(type='text/javascript' href='/static/bootstrap/js/bootstrap.js')
        link(rel='stylesheet' href='/static/css/main.css')
    body
        .container
            nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
                a.navbar-brand(href='#') TutorMatch
                .collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        each item in nav
                            li.nav-item(class={active: item.active})
                                a.nav-link(href=item.href)= item.title
                    form.form-inline.my-md-0
                        if !user
                            a.btn.btn-primary(href='/auth/google') Login
                        else
                            .nav-item Welcome, #{user.displayName}
                            a.btn.btn-danger.ml-2(href='/logout') Log out
            main(role='main')
                block content
        