html
  head
    include includes/head
    block head
  body(data-user-data=JSON.stringify(user))
    .container
      nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
        a.navbar-brand(href='/') TutorMatch
        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent",
          aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarSupportedContent
          ul.navbar-nav.mr-auto
            each item in nav
              li.nav-item(class={active: item.active})
                a.nav-link(href=item.href)= item.title
          form.form-inline.my-md-0
            if !user
              a.btn.btn-primary(href='/auth/google') Login
            else
              .nav-item Welcome, #{user.displayName}
              a.btn.btn-outline-secondary.ml-2.px-2(href=user.profileUrl, title="Profile")
                i.fa.fa-user.fa-fw(aria-hidden=true)
              a.btn.btn-outline-danger.ml-2.px-2(href='/logout', title= "Log out")
                i.fa.fa-sign-out.fa-fw(aria-hidden="aria-hidden")
      main(role='main')
        block content
