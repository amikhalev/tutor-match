html
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
        title TutorMatch - #{title || "Page"}
        script(type='text/javascript' src='/static/jquery/jquery.js')
        script(type='text/javascript' src='/static/popper.js/popper.js')
        link(rel='stylesheet' href='/static/bootstrap/css/bootstrap.css')
        script(type='text/javascript' src='/static/bootstrap/js/bootstrap.js')
        link(rel='stylesheet' href='/static/font-awesome/css/font-awesome.css')
        link(rel='stylesheet' href='/static/css/main.css')
        block head
    body
        .container
            nav.navbar.navbar-expand-lg.navbar-light.bg-light.rounded
                a.navbar-brand(href='#') TutorMatch
                .collapse.navbar-collapse
                    ul.navbar-nav.mr-auto
                        each item in nav
                            li.nav-item(class={active: item.active})
                                a.nav-link(href=item.href)= item.title
                    form.form-inline.my-md-0
                        if !user
                            a.btn.btn-primary(href='/auth/google') Login
                        else
                            .nav-item Welcome, #{user.displayName}
                            a.btn.btn-outline-secondary.ml-2.px-2(href='/profile/' + user.id, aria-label="Profile")
                                i.fa.fa-user.fa-fw(aria-hidden=true)
                            a.btn.btn-danger.ml-2.px-2(href='/logout', aria-label= "Log out")
                                .i.fa.fa-sign-out.fa-fw(aria-hidden="aria-hidden")
            main(role='main')
                block content
